/* pages/df-fen/df-fen.wxss */
page{
  width: 100%;
  padding-bottom: 20rpx;
  background-color: #f5f5f5;
}
.fen-banner{
  width: 100%;
}
.fen-banner image{
  display: block;
  width: 100%;
}
.my-fenStep{
  width: 100%;
  height: 100rpx;
  padding-top: 36rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.my-fenStep1{
  display: flex;
  align-items: center;
  height: 60rpx;
  margin-top: 38rpx;
  background-color: #fff;
}
.my-fen{
  display: flex;
  justify-content: space-between;
  width: 94%;
  height: 30rpx;
  padding-left: 10rpx;
  border-left: 10rpx solid #ff3541;
  margin: 0 auto 0;
  line-height: 30rpx;
  font-size: 26rpx;
}
.my-fen-num{
  font-size: 48rpx;
  color: #ff3541;
}
.my-fen-btn{
  height: 42rpx;
  padding: 0 10rpx;
  border-radius: 20rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff3541;
}

.fen-quanList{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 3%;
  box-sizing: border-box;
  margin-top: 10rpx;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}
.fen-quan{
  position: relative;
  width: 202rpx;
  height: 282rpx;
}
.fen-quan image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.fen-quan .conTxt{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}
.fen-quan .conTxt .money{
  margin-top: 84rpx;
  color: #fffec3;
  font-size: 52rpx;
}
.tomoney{
  color: #fffec3;
  font-size: 36rpx;
}
.tofen{
  width: 70%;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: 1rpx solid #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 24rpx;
}