/* pages/maps/maps.wxss */
.maps{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  padding: 0 3%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #fa3d3e;
  line-height: 52rpx;
  font-size: 24rpx;
}
.maps-fl{
  width: 70%;
  line-height: 52rpx;
}
.maps-fr button{
  width: 218rpx;
  height: 72rpx;
  padding: 0;
  margin-bottom: 10rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #fa3d3e;
}

.maps-info{
  padding: 3%;
  box-sizing: border-box;
}
.maps-info-img{
  width: 100%;
  height: 268rpx;
  margin: 0 auto;
}
.maps-info-txt{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #a4a4a4;
  line-height: 1.5;
}