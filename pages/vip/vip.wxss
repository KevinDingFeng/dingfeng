/* pages/vip/vip.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.vip-banner{
  width: 100%;
  height: 470rpx;
}
.vip-banner image{
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}

.vip-help{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  padding: 0 10%;
  box-sizing: border-box;
  margin-top: 26rpx;
  line-height: 110rpx;
  background-color: #fc6a5b;
}
.vip-help .btn{
  width: 220rpx;
  height: 68rpx;
  border-radius: 16rpx;
  border: 1rpx solid #fff;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
  font-weight: 100;
  font-size: 32rpx;
  background-color: #fc6a5b;
}

.vip-info{
  padding-top: 10rpx;
  border-top: 1rpx solid #636363;
  margin: 60rpx 50rpx 0;
  color: #636363;  
  line-height: 2.5;
  font-size: 28rpx;
}